orsource "$IDF_PATH/examples/common_components/env_caps/$IDF_TARGET/Kconfig.env_caps"

menu "LIN Master Configuration"

    config LIN_MASTER_UART_PORT_NUM
        int "LIN master UART port number"
        range 0 2 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
        default 2 if IDF_TARGET_ESP32 || IDF_TARGET_ESP32S3
        range 0 1
        default 1
        help
            UART communication port number for the LIN master.
            See UART documentation for available port numbers.

    config LIN_MASTER_RXD
        int "LIN transceiver RXD pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 6
        help
            GPIO number for LIN master RX pin. See UART documentation for more information
            about available pin numbers for UART.

    config LIN_MASTER_TXD
        int "LIN transceiver TXD pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_OUT_RANGE_MAX
        default 7
        help
            GPIO number for LIN master TX pin. See UART documentation for more information
            about available pin numbers for UART.

    config LIN_MASTER_SLEEP
        int "LIN transceiver sleep pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 15
        help
            GPIO number for LIN master sleep pin.

endmenu
