orsource "$IDF_PATH/examples/common_components/env_caps/$IDF_TARGET/Kconfig.env_caps"

menu "MCM - Slave Power Configuration"

    config SLAVE_POWER_CTRL
        int "Slave power control pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 5
        help
            GPIO number for slave power control pin.

    config SLAVE_POWER_SENSE
        int "Slave power current sensor pin number"
        range ENV_GPIO_RANGE_MIN ENV_GPIO_IN_RANGE_MAX
        default 4
        help
            GPIO number for slave power current sensor pin.

endmenu
